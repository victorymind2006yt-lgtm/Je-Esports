rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "jeesportsofficial@gmail.com" || 
        request.auth.token.email == "fflionking12345678@gmail.com" ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // Wallets: Users can read/write their own wallet
    match /wallets/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      match /transactions/{transactionId} {
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Payment Requests
    match /paymentRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow update: if isAdmin();
    }

    // Redeem Codes
    match /redeemCodes/{code} {
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow create, delete: if isAdmin();
    }
    
    // Admins collection
    match /admins/{userId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Tournaments
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if request.auth != null; // Keeping permissive for now as per previous state
    }
    
    // Registrations
    match /registrations/{registrationId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Catch-all for other collections
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
